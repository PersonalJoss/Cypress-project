{
  "name": "cypress-project",
  "version": "1.0.0",
  "description": "This code is for automation testing as part of my personal knowledge. It's written in Cypress/js and has everything needed to run in just a few steps.",
  "homepage": "https://github.com/JossZC/Cypress-project#readme",
  "bugs": {
    "url": "https://github.com/JossZC/Cypress-project/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JossZC/Cypress-project.git"
  },
  "license": "ISC",
  "author": "Jocselyn Zumbado Chartier",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "allure:clear": "rm -rf allure-results allure-report cypress/screenshots cypress/videos",
    "cy:run": "cypress run --env allure=true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "test:allure": "npm run allure:clear && npm run cy:run || npm run allure:report"
  },
  "dependencies": {
    "cypress": "^15.8.1"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.36.0"
  }
}
